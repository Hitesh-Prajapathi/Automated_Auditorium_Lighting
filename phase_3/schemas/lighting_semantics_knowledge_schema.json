{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Lighting Semantics Schema (Phase 3)",
    "description": "Design tendencies and biases. No hard commands.",
    "type": "object",
    "required": [
        "context_type",
        "context_value",
        "rules",
        "priority"
    ],
    "properties": {
        "context_type": {
            "type": "string",
            "enum": [
                "emotion",
                "script_type",
                "scene_function",
                "event_phase"
            ],
            "description": "The category of context this rule applies to"
        },
        "context_value": {
            "type": "string",
            "description": "The specific trigger (e.g., 'joy', 'formal_event')"
        },
        "priority": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Weight of this semantic bias (0.0 to 1.0)"
        },
        "rules": {
            "type": "object",
            "properties": {
                "intensity": {
                    "type": "object",
                    "properties": {
                        "preferred_range": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    }
                },
                "color": {
                    "type": "object",
                    "properties": {
                        "temperature": {
                            "type": "string",
                            "enum": [
                                "cool",
                                "neutral",
                                "warm"
                            ]
                        },
                        "palettes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "transitions": {
                    "type": "object",
                    "properties": {
                        "preferred_types": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "speed": {
                            "type": "string",
                            "enum": [
                                "slow",
                                "medium",
                                "fast",
                                "instant"
                            ]
                        }
                    }
                }
            },
            "description": "The design biases to apply when this context is active"
        }
    },
    "additionalProperties": false
}