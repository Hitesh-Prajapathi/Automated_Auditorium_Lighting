{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene",
  "description": "Canonical scene representation produced by Phase 1 and optionally enriched later.",
  "type": "object",
  "required": [
    "scene_id",
    "script_type",
    "time_window",
    "text"
  ],
  "properties": {
    "scene_id": {
      "type": "string",
      "description": "Unique scene identifier"
    },
    "script_type": {
      "type": "string",
      "enum": [
        "timestamped_drama",
        "raw_drama",
        "event_schedule",
        "cue_sheet",
        "mixed"
      ]
    },
    "time_window": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": {
          "type": "number",
          "description": "Start time in seconds"
        },
        "end": {
          "type": "number",
          "description": "End time in seconds"
        }
      }
    },
    "location": {
      "type": ["string", "null"],
      "description": "Optional location or stage area"
    },
    "text": {
      "type": "string",
      "description": "Raw scene text used for downstream analysis"
    },
    "emotion": {
      "type": ["object", "null"],
      "description": "Optional emotion enrichment (Phase 2)",
      "properties": {
        "primary": { "type": "string" },
        "secondary": { "type": ["string", "null"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "explicit_lighting": {
      "type": "array",
      "description": "Verbatim lighting instructions explicitly mentioned in the script",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
